    foreach (Column column in table.Columns)
    {
        WriteLine("public " + T4Helper.ConvertToClrType(column.DataType.Name, column.Nullable) + " " + column.Name + "{ get; set; }");
    }
    PopIndent();
	PopIndent();
	#>
